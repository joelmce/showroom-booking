<link rel="stylesheet" href="/static/stylesheets/login.css">

<main>
    <div class="title">
        <h1>Please login. </h1>
        <h4>To book, login using the account given to you from your representative.</h4>
    </div>
    <section class="login">
        <form action="/login/success" method="POST">
            <label for="username">Username</label>
            <input type="text" name="username">

            <label for="password">Password</label>
            <input type="password" name="password">

            <input type="submit" name="submit" value="Login" class="button button-primary">
        </form>
    </section>
</main>

