{% extends 'index.html.jinja' %}
{% block css %}
    <link rel="stylesheet" href="/static/stylesheets/admin.css">
{% endblock %}

{% block main %}
<main>
{% with messages = get_flashed_messages() %}
    <ul class=flashes>
    {% for message in messages %}
      <li>{{ message }}</li>
    {% endfor %}
    </ul>
    <section class="manage-users">
        <a href="/user/new">Add User</a>
        <ul>
        {% for user in users %}
            <li class="user-item">
                {{ user.name }}
                {% if user.name == session.get("user") %}
                    (You)
                {% endif %}
                {% if user.admin %}
                (Admin)
                {% endif %}
                <a class="delete-user" href="/user/delete/{{user.user_id}}">Delete</a>
            </li>
        {% endfor %}
        </ul>
    </section>
    {% endwith %}
</main>
{% endblock %}