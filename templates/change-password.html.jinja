<link rel="stylesheet" href="/static/stylesheets/login.css">

<main>
    <div class="title">
        <h1>Update your password.</h1>
    </div>
    <section class="login">
        <form action="/change-password/success" method="POST">
            <input type="hidden" name="id" value="{{ user.user_id }}">

            <label for="username">Username</label>
            <input type="text" name="username" value="{{ user.name }}" disabled>

            <label for="password">Old Password</label>
            <input type="password" name="password">

            <label for="new-password">New Password</label>
            <input type="password" name="new-password">

            <label for="confirm-password">Confirm Password</label>
            <input type="password" name="confirm-password">

            <input type="submit" name="submit" value="Update" class="button button-primary">
        </form>
    </section>
</main>

